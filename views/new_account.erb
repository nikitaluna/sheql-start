<section id="forms">
                    <div class="container">
                        <div class="full-width">
                            <div class="small-padding">
                                <h2 class="blue-underline small-bottom-padding">Forms</h2>
                            </div>
                        </div>
                        <div class="third">
                            <div class="small-padding">
                                <h3>Fill Out This Form</h3>
                                <form>
                                    <label>Name *</label>
                                    <input type="text" placeholder="Emily Doe">
                                    
                                    <label>Email *</label>
                                    <input type="email" placeholder="emily@example.com">
                                    
                                    <label>Age *</label>
                                    <input type="number" placeholder="13">
                                    
                                    <label>Gender *</label>
                                    <input type="text" placeholder="Female">

   
                                    <label>Allergies *</label><br>
                                    <% Allergy.all.each do |allergy| %>
                                      <input name="<%=allergy.name%>" value="<%=allergy.id%>" type="checkbox"> <%=allergy.name %> <br>       
             
                                      <% end %>                             
                                    <label>Symptoms</label>
                                    <textarea></textarea>
                                    
                                    <label>Date of Birth</label>
                                    <input type="date"
                                        value="2018-07-22"
                                        min="1900-01-01" max="2018-12-31">
                                    
                                    <input type="submit" value="Submit">
                                </form>
                            </div>
                        </div>
        <section>